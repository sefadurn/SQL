SELECT COUNT(*) AS uzun_film_adeti
FROM film
WHERE length >
(
	SELECT AVG(length) FROM film
);

---------------------------------------------------

SELECT COUNT(*) AS en_y√ºksek_rental_rate
FROM film
WHERE rental_rate =
(
	SELECT MAX(rental_rate) FROM film
);
---------------------------------------------------

SELECT * FROM film
WHERE rental_rate =
(
	SELECT MIN(rental_rate) FROM film 
)
AND replacement_cost =
(
	SELECT MIN(replacement_cost) FROM film
);
